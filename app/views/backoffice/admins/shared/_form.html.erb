<h1 class="page-header">Administradores</h1>				
  <%if @admin.errors.any?%>         
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>   
      <% @admin.errors.full_messages.each do |message|%>
        <ul>
          <li>                  
            <%= message %>
          </li>
        </ul>
      <%end%>
    </div>
  <%end%>
        
<div class="panel panel-default">
  <div class="panel-heading">
      <%= action %>
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="col-lg-6">
      <%= form_for([:backoffice, @admin] , role:"form") do |f| %> 
        <div class="form-group">
          <label>Nome Admnistrador</label>
          <%= f.text_field :name, class: "form-control", placeholder:"Digite o nome do administrador" %>
        </div>																			
        <div class="form-group">
          <label>Email Admnistrador</label>
          <%= f.text_field :email, class: "form-control", placeholder:"Digite o email do administrador" %>
        </div>		

        <div class="form-group">
        <%= f.label :role %>
        <%= f.collection_radio_buttons(:role, options_for_roles,:description,:id) do |b| %>          
            <div class="radio">
                <%= b.label { b.radio_button + b.text} %>
            </div>
        <% end %>
        </div>
        
        <div class="form-group">
          <label>Senha Admnistrador</label>
          <%= f.password_field :password, class: "form-control", placeholder:"Digite a senha" %>
        </div>																			
        <div class="form-group">
          <label>Confirmar senha</label>
          <%= f.password_field  :password_confirmation, class: "form-control", placeholder:"Digite a confirmação da senha" %>
        </div>																			
        <button type="submit" class="btn btn-default">Submit</button>
      <% end %>
    </div>            
  </div>
    <!-- /.panel-body -->
</div>
			