<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Scamboapp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all'%>    
    <%= stylesheet_link_tag    'site', media: 'all' %>
    <%= stylesheet_link_tag    'site/profile', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag 'site' %>
    <%= javascript_include_tag 'site/profile' %>
    <%= javascript_include_tag 'https://use.fontawesome.com/releases/v5.0.8/js/all.js' %>
    



  </head>

  <body>
    <%= render partial: "layouts/site_shared/navigation" %>
    
    
    <div id="wrapper" class="toggled">

      <!-- Sidebar -->
      <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
          <li class="sidebar-brand">
            <a href="#">
                  Start Bootstrap
            </a>
          </li>
          <li>
            <%= link_to  "Dashboard", site_profile_dashboard_index_path	 %>            
          </li>
          <li>
            <%= link_to  "Anúncios", site_profile_ads_path %>            
          </li>
          <li>
            <%= link_to  "Publicar anúncio", new_site_profile_ad_path %>            
          </li>
          
        </ul>
      </div>
      <!-- /#sidebar-wrapper -->

      <!-- Page Content -->
      <div id="page-content-wrapper">
        <div class="container-fluid">
          <%= yield %>          
        </div>
      </div>
      <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!--  -->

    <script>
      $("#menu-toggle").click(function(e) {
          e.preventDefault();
          $("#wrapper").toggleClass("toggled");
      });
      </script>

      <% if notice %>
        <%= javascript_tag "$.notify('#{notice}','success');" %>
      <%end%>
      <% if alert %>
        <%= javascript_tag "$.notify('#{alert}','Error');" %>
      <%end%>
    </body>

</html>