<h1>Anúncios</h1>

<table class="table table-hover">
  <thead>
    <tr>
    <th scope="col">#</th>
    <th scope="col">Imagem</th>
    <th scope="col">Titulo</th>
    <th scope="col">Categoria</th>
    <th scope="col">Preço</th>
    <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @ads.each do |ad| %>
      <tr>
        <th scope="row"><%= ad.id %></th>
          <td><%= image_tag ad.picture(:thumb) %></td>
          <td><%= ad.title %></td>
          <td><%= ad.category.description %></td>
          <td><%= humanized_money_with_symbol ad.price %></td>
          <td>
            <%= link_to   edit_site_profile_ad_path(ad),class:"btn btn-primary btn-sm"	do %>
              <i class="fas fa-pencil-alt"></i>
            <% end %>
          </td>
        </tr>
      <tr>
    <% end %>
      
  </tbody>
</table>